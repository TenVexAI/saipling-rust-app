{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SAiPLING",
  "version": "0.1.1",
  "identifier": "com.saipling.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "node scripts/sync-version.mjs && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SAiPLING",
        "width": 1280,
        "height": 800,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/Square150x150Logo.png"
    ],
    "resources": {
      "binaries/*": "binaries/",
      "resources/export-templates/**/*": "export-templates/"
    }
  }
}
